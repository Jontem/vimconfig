execute pathogen#infect()
syntax enable
filetype indent on
set background=light
colorscheme solarized
set number
set autoindent
set hidden
set history=100
set nowrap
set tabstop=2
set shiftwidth=2
set expandtab
set autoindent

" Disables arrow keys in normal mode
nnoremap <Up> <NOP>
nnoremap <Down> <NOP>
nnoremap <Left> <NOP>
nnoremap <Right> <NOP>

" Disables arrow keys in insert mode
inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>
